{
  "boot-source": {
    "kernel_image_path": "/var/lib/microclaw-saas/vmlinux",
    "boot_args": "init=/init console=ttyS0 reboot=k panic=1 pci=off FC_VM_IP=${VM_IP} FC_VM_GATEWAY=${GATEWAY_IP} FC_VM_NETMASK=30 FC_TENANT_ID=${TENANT_ID} FC_DNS=8.8.8.8 FC_PORT=8080"
  },
  "drives": [
    {
      "drive_id": "rootfs",
      "path_on_host": "${ROOTFS_PATH}",
      "is_root_device": true,
      "is_read_only": false
    },
    {
      "drive_id": "data",
      "path_on_host": "${DATA_VOL_PATH}",
      "is_root_device": false,
      "is_read_only": false
    }
  ],
  "machine-config": {
    "vcpu_count": 1,
    "mem_size_mib": 128
  },
  "network-interfaces": [
    {
      "iface_id": "eth0",
      "guest_mac": "${GUEST_MAC}",
      "host_dev_name": "${TAP_DEVICE}"
    }
  ]
}
